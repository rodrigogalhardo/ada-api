with Common.Types; use Common.Types;
with Current_Bot;
with Hw.Hw_Config;
with Stm32.GPIO;
pragma Elaborate_All (Stm32.GPIO);

package body Hw.Funny is
  procedure Set_Pin (Value : Boolean) is
  begin
    Stm32.GPIO.Set_Pin (Hw.Hw_Config.Funny_Action_Pin, Value);
  end Set_Pin;

begin
  if Current_Bot = Small then
    Stm32.GPIO.Setup_Out_Pin (Hw.Hw_Config.Funny_Action_Pin);
  end if;
end Hw.Funny;

